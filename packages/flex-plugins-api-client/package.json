{
  "name": "flex-plugins-api-client",
  "version": "0.1.0",
  "description": "Flex Plugins API Client",
  "keywords": [
    "flex",
    "flex plugins",
    "flex plugins api",
    "flex plugins api client",
    "flex plugins client",
    "plugins"
  ],
  "homepage": "https://github.com/twilio/flex-plugins-api-client#readme",
  "bugs": {
    "url": "https://github.com/twilio/flex-plugins-api-client/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twilio/flex-plugins-api-client.git"
  },
  "license": "MIT",
  "author": "Kousha Talebian <k@ousha.me>",
  "contributors": [
    "Kousha Talebian <k@ousha.me>"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint --ext ts src/",
    "lint:fix": "npm run lint -- --fix",
    "prepublish": "npm run build",
    "test": "cd ../.. && jest packages/flex-plugins-api-client",
    "test:watch": "cd ../.. && jest packages/flex-plugins-api-client --watch"
  },
  "directories": {
    "lib": "src",
    "test": "__tests__"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "flex-plugins-api-utils": "^0.1.0"
  }
